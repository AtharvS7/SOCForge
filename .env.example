# ==============================================
# SOCForge Environment Configuration
# ==============================================
# Copy this to .env and update values for your environment

# PostgreSQL
POSTGRES_DB=socforge
POSTGRES_USER=socforge_admin
POSTGRES_PASSWORD=CHANGE_ME_strong_password

# Database URL
DATABASE_URL=postgresql+asyncpg://socforge_admin:CHANGE_ME@localhost:5432/socforge

# Redis
REDIS_URL=redis://:CHANGE_ME@localhost:6379/0
REDIS_PASSWORD=CHANGE_ME_redis_password

# JWT Authentication
JWT_SECRET=CHANGE_ME_run_python_c_import_secrets_print_secrets_token_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=480

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO

# ── Optional Integrations ──
# Leave blank to disable

# SIEM (Splunk)
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=

# SIEM (Elasticsearch)
ELASTICSEARCH_URL=
ELASTICSEARCH_API_KEY=

# Notifications (Email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Notifications (Slack)
SLACK_WEBHOOK_URL=

# IOC Enrichment
VIRUSTOTAL_API_KEY=
ABUSEIPDB_API_KEY=
